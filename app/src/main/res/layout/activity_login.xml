<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/color_background_login"
    >

    <FrameLayout

        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/fam"></FrameLayout>
    <FrameLayout
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/fam"></FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/logo"/>

        <LinearLayout

            android:id="@+id/formlogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logoct"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btnlogin"
                android:layout_width="@dimen/with_button"
                android:layout_height="@dimen/hight_button"
                android:layout_marginTop="50dp"
                android:background="@drawable/background_button"
                android:backgroundTint="#FF9B9B"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="-2"
                android:text="Login"
                android:textSize="@dimen/text_size_buton_big" />

            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btnsignin"
                android:layout_width="@dimen/with_button"
                android:layout_height="@dimen/hight_button"
                android:layout_marginTop="50dp"
                android:background="@drawable/background_button"
                android:backgroundTint="#FF9B9B"
                android:shadowColor="@color/black"
                android:text="SIGN IN"
                android:textSize="@dimen/text_size_buton_big" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>